@model PersonalisadoModel

@{
    ViewData["Title"] = "Personalizar aquecimento";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Microondas Online</title>
    <link rel="stylesheet" href="~/css/aquecimentoPersonalizado.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div>
        <form id="formulario" class="container" action="@Url.Action("Personalizado", "Aquecimento")" method="get">
            <h2>Microondas Online</h2>

            <h1 class="tituloCustomizar">Customizar aquecimento</h1>

            <label for="nomePrograma">Nome do programa</label>
            <input type="text" id="nomePrograma" name="NomePrograma" value=''>

            <label for="nomeAlimento">Alimento</label>
            <input type="text" id="nomeAlimento" name="NomeAlimento" value=''>

            <label for="potencia">Potência (%)</label>
            <input type="number" id="potencia" name="Potencia" value='' min="1" max="10">

            <label for="segundos">Tempo de aquecimento (segundos)</label>
            <input type="number" id="segundos" name="Segundos" value='' min="1" max="120">

            <label for="caractere">Caractere aquecimento</label>
            <input type="text" id="caractere" name="Caractere" required>

            <label for="instruções">Instruções</label>
            <input type="text" id="instrucoes" name="Instrucoes" required>

            <button type="submit" id="startButton">Cadastrar</button>
        </form>
    </div>
</body>
</html>
